@page
@model WebApplication1.Pages.Alumnos.DetailsModel
@{
    var photo = "~/images/" + (Model.alumno.Foto ?? "nodisponible.jpg");
}

    <div class="col-sm-8">
        @await Component.InvokeAsync("AlumnosCurso", new{ curso = Model.alumno.CursoID})
    </div>

    <div class="card m-3" style="min-width: 18rem; max-width:100%">
        <div class="card-header">
            <h3 class="text-center">@Model.alumno.Name</h3>
        </div>
        <div class="card-body text-center">
            <img class="card-img-top imageThumbail mb-3" asp-append-version="true" src="@photo">
            <h4>Alumno ID: @Model.alumno.Id</h4>
            <h4>E-Mail: @Model.alumno.Email</h4>
            <h4>Curso: @Model.alumno.CursoID</h4>
        </div>
        <div class="card-footer text-center">
            <a asp-page="Index" class="btn btn-primary m-1">Back</a>
        <a asp-page="/Alumnos/Edit" asp-route-ID="@Model.alumno.Id" class="btn btn-success m-1">Edit</a>
            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    </div>
